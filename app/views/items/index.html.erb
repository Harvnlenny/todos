<p id="notice"><%= notice %></p>

<h1>Listing Items</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Due date</th>
      <th>Is complete</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.task %></td>
        <td><%= item.due_date %></td>
        <td><%= item.is_complete %></td>
        <td><%= item.list.name %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
      </tr>
    <% end %>
      <li><%= form_tag("/search", method: "get") do %>
        <%= label_tag(:word, "Search for:") %>
        <%= text_field_tag(:word) %>
        <%= submit_tag("Search") %>
      <% end %></li>
  </tbody>
</table>

<br>

