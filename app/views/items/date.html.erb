<h1><%= @item.task %></h1>
<h4>Please enter the date by which this date is due:</h4>
<%= form_for(@item) do |f| %>
<% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% @item.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>

<div class="field">
  <%= f.label :due_date %><br>
  <%= f.date_field :due_date %>
</div>
<div class="actions">
  <%= f.submit%>
</div>
<% end %>